<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="RcloneGui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RcloneGui">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- App Colors -->
            <Color x:Key="AppAccentColor">#0078D4</Color>
            <SolidColorBrush x:Key="AppAccentBrush" Color="{StaticResource AppAccentColor}" />
            
            <!-- Status Colors -->
            <SolidColorBrush x:Key="MountedStatusBrush" Color="#107C10" />
            <SolidColorBrush x:Key="UnmountedStatusBrush" Color="#797979" />
            <SolidColorBrush x:Key="ErrorStatusBrush" Color="#D13438" />
            <SolidColorBrush x:Key="MountingStatusBrush" Color="#FF8C00" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
