<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="RcloneGui.Features.Dashboard.Views.ConnectionTypeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RcloneGui.Features.Dashboard.Views"
    xmlns:vm="using:RcloneGui.Features.Dashboard.ViewModels"
    xmlns:converters="using:RcloneGui.Core.Infrastructure"
    NavigationCacheMode="Disabled">
    
    <Page.Resources>
        <converters:StringToBrushConverter x:Key="StringToBrushConverter"/>
        
        <DataTemplate x:Key="ConnectionTypeTemplate" x:DataType="vm:ConnectionTypeItem">
            <Button Padding="12,8"
                    Background="Transparent"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    CornerRadius="8"
                    MinWidth="140"
                    MaxWidth="160"
                    HorizontalContentAlignment="Stretch"
                    IsEnabled="{x:Bind IsEnabled, Mode=OneWay}"
                    Click="ConnectionTypeCard_Click"
                    Tag="{x:Bind}">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icon -->
                    <Grid Grid.Column="0" 
                          Width="32" 
                          Height="32" 
                          CornerRadius="6"
                          Background="{x:Bind IconBackgroundColor, Mode=OneWay, Converter={StaticResource StringToBrushConverter}}"
                          VerticalAlignment="Center">
                        <FontIcon Glyph="{x:Bind IconGlyph, Mode=OneWay}" 
                                  FontSize="14" 
                                  Foreground="{x:Bind IconForegroundColor, Mode=OneWay, Converter={StaticResource StringToBrushConverter}}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Text -->
                    <StackPanel Grid.Column="1" 
                                VerticalAlignment="Center"
                                Margin="0,0,4,0">
                        <TextBlock Text="{x:Bind Name, Mode=OneWay}" 
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="90"/>
                        <TextBlock Text="{x:Bind StatusText, Mode=OneWay}" 
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                   Visibility="{x:Bind ShowStatus, Mode=OneWay}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Button>
        </DataTemplate>
    </Page.Resources>
    
    <ScrollViewer Padding="0,0,16,0">
        <StackPanel Padding="24" MaxWidth="800" HorizontalAlignment="Left">
            <!-- Header -->
            <TextBlock Text="Add Connection" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Select a storage provider to connect" 
                       Style="{StaticResource CaptionTextBlockStyle}" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Margin="0,4,0,20"/>
            
            <!-- Search Box -->
            <AutoSuggestBox x:Name="SearchBox"
                            PlaceholderText="Search connection types..."
                            QueryIcon="Find"
                            Margin="0,0,0,20"
                            TextChanged="SearchBox_TextChanged"
                            HorizontalAlignment="Stretch"/>
            
            <!-- Categories -->
            <ItemsRepeater x:Name="CategoriesRepeater"
                          ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <StackLayout Orientation="Vertical" Spacing="20"/>
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="vm:ConnectionTypeCategory">
                        <StackPanel>
                            <!-- Category Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <FontIcon Glyph="{x:Bind CategoryIcon, Mode=OneWay}" 
                                          FontSize="14"
                                          Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                          Margin="0,0,6,0"
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind CategoryName, Mode=OneWay}" 
                                           Style="{StaticResource SubtitleTextBlockStyle}"
                                           FontSize="16"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind ItemCountText, Mode=OneWay}" 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="6,0,0,0"/>
                            </StackPanel>
                            
                            <!-- Connection Types Grid -->
                            <GridView ItemsSource="{x:Bind Items, Mode=OneWay}"
                                      ItemTemplate="{StaticResource ConnectionTypeTemplate}"
                                      SelectionMode="None"
                                      IsItemClickEnabled="False"
                                      HorizontalAlignment="Left">
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid MaximumRowsOrColumns="4"
                                                      Orientation="Horizontal"
                                                      Margin="0,0,-12,0"/>
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                                <GridView.ItemContainerStyle>
                                    <Style TargetType="GridViewItem">
                                        <Setter Property="Margin" Value="0,0,12,12"/>
                                        <Setter Property="Padding" Value="0"/>
                                    </Style>
                                </GridView.ItemContainerStyle>
                            </GridView>
                        </StackPanel>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
            
            <!-- No Results -->
            <StackPanel x:Name="NoResultsPanel"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,48,0,0"
                       Visibility="Collapsed">
                <FontIcon Glyph="&#xE773;" 
                          FontSize="40"
                          Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                <TextBlock Text="No connection types found" 
                           Style="{StaticResource BodyStrongTextBlockStyle}"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,4"/>
                <TextBlock Text="Try a different search term"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
